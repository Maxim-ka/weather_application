<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/city_input_dialog_padding">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/indent"
        android:textAlignment="center"
        android:hint="country, region, city, district"
        app:errorEnabled="true"
        app:errorTextColor="@color/colorAccent"
        app:errorTextAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:errorIconDrawable="@drawable/ic_warning"
        app:errorIconTint="@color/colorAccent"
        app:helperTextEnabled="true"
        app:helperTextTextAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:helperText="russia,irkutsk region,irkutsk"
        app:hintEnabled="true"
        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        app:hintAnimationEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_name_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/city_input_dialog_value_text_size"
            android:imeOptions="actionDone"
            android:singleLine="false"
            android:inputType="textAutoCorrect|textAutoComplete"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_code_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent"
        android:textAlignment="center"
        android:hint="2-letter country code"
        app:errorEnabled="true"
        app:errorTextColor="@color/colorAccent"
        app:errorTextAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:errorIconDrawable="@drawable/ic_warning"
        app:errorIconTint="@color/colorAccent"
        app:helperTextEnabled="true"
        app:helperTextTextAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:helperText="ru (Russia) us (USA) by (Belarus)"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:counterEnabled="true"
        app:counterTextAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:counterMaxLength="2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_code_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/city_input_dialog_value_text_size"
            android:imeOptions="actionDone"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <include layout="@layout/button"/>

</LinearLayout>