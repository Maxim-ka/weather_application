<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="place"
            type="reschikov.geekbrains.androidadvancedlevel.weatherapplication.domain.Place.Result" />
    </data>

    <reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.customView.MyCardView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background="@android:color/background_light"
        android:layout_margin="8dp"
        app:cardCornerRadius= "4dp"
        app:cardElevation= "@dimen/item_city_cardElevation_value"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:text='@{place.name}'
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:textAlignment="gravity"
                tools:text="Иркутск, ru"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/latitude"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:text="@string/longitude"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lat"
                    android:text="@{String.valueOf(place.lat)}"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="000,000000"/>

                <TextView
                    android:id="@+id/tv_lon"
                    android:text="@{String.valueOf(place.lon)}"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    tools:text="000,000000"/>

            </LinearLayout>

        </LinearLayout>

    </reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.customView.MyCardView>

</layout>
