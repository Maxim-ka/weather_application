<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.weather.WeatherViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/day"
            app:date="@{model.fieldCurrentState.dt}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/current_frame_indent"
            android:paddingEnd="@dimen/current_frame_indent"
            android:textSize="@dimen/current_frame_datetime_text_size"
            tools:text="воскресенье, ХХ месяц ХХХХ"
            />

        <TextView
            android:id="@+id/time"
            app:current_time="@{model.fieldCurrentState.dt}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/current_frame_indent"
            android:paddingEnd="@dimen/current_frame_indent"
            android:textSize="@dimen/current_frame_datetime_text_size"
            tools:drawablePadding="@dimen/current_frame_indent"
            tools:text="00:00 "/>

    </LinearLayout>

</layout>