<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sensor="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.customView.SensorView
        android:id="@+id/cv_pressureMeter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/indent_big"
        android:layout_weight="1"
        android:padding="@dimen/indent"
        sensor:cv_activeColor="@color/activeColor"
        sensor:cv_disableColor="@color/disableColor"
        sensor:cv_textSize="@dimen/text_size_sensors"
        sensor:cv_textColor="@color/colorAccent"
        sensor:cv_widthStroke="@dimen/width_stroke_sensor"
        sensor:cv_srcDrawable="@drawable/ic_atmospheric_pressure"
        sensor:cv_SensorName="@string/pressure_meter"/>

    <reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.customView.SensorView
        android:id="@+id/cv_temperatureSensor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/indent_big"
        android:layout_weight="1"
        android:padding="@dimen/indent"
        sensor:cv_activeColor="@color/activeColor"
        sensor:cv_disableColor="@color/disableColor"
        sensor:cv_textColor="@color/colorAccent"
        sensor:cv_textSize="@dimen/text_size_sensors"
        sensor:cv_srcDrawable="@drawable/ic_thermometer_high_temperature"
        sensor:cv_widthStroke="@dimen/width_stroke_sensor"
        sensor:cv_SensorName="@string/temperature_sensor"/>

    <reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.customView.SensorView
        android:id="@+id/cv_humiditySensor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/indent_big"
        android:layout_weight="1"
        android:padding="@dimen/indent"
        sensor:cv_activeColor="@color/activeColor"
        sensor:cv_disableColor="@color/disableColor"
        sensor:cv_textSize="@dimen/text_size_sensors"
        sensor:cv_textColor="@color/colorAccent"
        sensor:cv_widthStroke="@dimen/width_stroke_sensor"
        sensor:cv_srcDrawable="@drawable/ic_humidity"
        sensor:cv_SensorName="@string/humidity_sensor"/>

</LinearLayout>


