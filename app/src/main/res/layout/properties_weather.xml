<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="reschikov.geekbrains.androidadvancedlevel.weatherapplication.ui.weather.WeatherViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/feeling"
            android:text='@{model.fieldCurrentState.feelsLike + " ℃"}'
            android:textSize="@dimen/properties_weather_value_text_size"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_hand"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wind"
            android:text='@{model.fieldCurrentState.wind + " " + @string/m_c}'
            android:textSize="@dimen/properties_weather_value_text_size"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            app:drawableStartCompat="@drawable/ic_wind"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{model.fieldCurrentState.humidity + @string/pct}"
            android:textSize="@dimen/properties_weather_value_text_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_humidity"
            tools:text="00 %"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{model.fieldCurrentState.pressure + " " + @string/mm_Hg}'
            android:textSize="@dimen/properties_weather_value_text_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_atmospheric_pressure"
            tools:text="000,00 мм.рт.ст"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/overcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{model.fieldCurrentState.cloud + " " + @string/pct}'
            android:textSize="@dimen/properties_weather_value_text_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_clouds"
            tools:text="00 %"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rainfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{model.fieldCurrentState.precipitation + " " + @string/mm}'
            android:textSize="@dimen/properties_weather_value_text_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_umbrella"
            tools:text="00,00 мм"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sunrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:time="@{model.fieldCurrentState.sunrise}"
            android:textSize="@dimen/properties_weather_value_text_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_sunrise"
            tools:text="00:00"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/current_frame_indent"
            android:layout_marginEnd="@dimen/current_frame_indent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorPrimaryDark"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:time="@{model.fieldCurrentState.sunset}"
            android:textSize="@dimen/properties_weather_value_text_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_sunset"
            tools:text="00:00"/>

    </LinearLayout>

</layout>