<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/choice_dialog_padding">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_location"
            android:textSize="@dimen/choice_dialog_text_size"
            android:gravity="center"
            android:textAlignment="gravity"
            android:checkMark="?android:attr/textCheckMark"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:focusable="true"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_my_location_black"
            tools:checked="true"/>

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/set_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_city"
            android:textSize="@dimen/choice_dialog_text_size"
            android:gravity="center"
            android:textAlignment="gravity"
            android:checkMark="?android:attr/textCheckMark"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_location_city_black"
            android:layout_weight="1"/>

    </RadioGroup>

    <include layout="@layout/button"/>

</LinearLayout>

