<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:dialogTheme">@style/CustomDialog</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorSecondaryVariant</item>
        <item name="actionModeCloseDrawable">@drawable/ic_cancel</item>

        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_properties</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="textfieldTextInputLayout">
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="errorTextAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="errorIconTint">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="hintTextAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="counterTextAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="helperTextTextColor">@color/colorPrimaryDark</item>
        <item name="helperTextTextAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
    </style>

    <style name="materialCardView">
        <item name="cardCornerRadius">@dimen/radius_corner_card</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/width_stroke_common</item>
        <item name="contentPadding">@dimen/indent</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="textChip">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_info_card</item>
        <item name="android:textAlignment">gravity</item>
    </style>

</resources>
