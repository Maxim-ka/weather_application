<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:dialogTheme">@style/CustomDialog</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="actionModeCloseDrawable">@drawable/ic_cancel</item>
        <item name="actionModeStyle">@style/CustomActionModeStyle</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomActionModeStyle" parent="Widget.AppCompat.Light.ActionMode.Inverse">
        <item name="titleTextStyle">@style/CustomTitleStyleActionMode</item>
    </style>

    <style name="CustomTitleStyleActionMode" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textfieldTextInputLayout">
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="errorTextAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="errorIconTint">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="hintTextAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="counterTextAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="helperTextTextColor">@color/colorPrimaryDark</item>
        <item name="helperTextTextAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>

    <style name="materialCardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
